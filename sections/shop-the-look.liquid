<div class="shop-our-look">
  <div class="image-with-dots">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | img_url: 'master' }}"
        alt="Shop Our Look Image"
        class="shop-image"
      >
    {% endif %}
    <div class="image-dots">
      {% for block in section.blocks %}
        <span class="dot"></span>
      {% endfor %}
    </div>
  </div>
  <div class="product-slider">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign selected_product = block.settings.product %}
          {% assign product = all_products[selected_product] %}
          <div class="swiper-slide">
            <div class="product-details">
              <img
                src="{{ product.featured_image | img_url: 'master' }}"
                alt="{{ product.title }}"
                class="product-image"
              >
              <div class="product-meta">
                <div class="product-title">
                  <p>{{ product.title }}</p>
                </div>
                <div class="product-price">
                  <p>{{ product.price | money }}</p>
                </div>
              </div>
              {% render 'product-form' %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<style>
  .shop-our-look,
  .product-meta {
    display: flex;
    flex-wrap: wrap;
  }

  .shop-our-look {
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .image-with-dots .shop-image {
    width: 100%;
  }

  .swiper-container {
    overflow: hidden;
  }

  .product-meta {
    justify-content: space-between;
    align-items: center;
  }

  .product-slider {
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  .product-details .product-image {
    width: 100%;
  }

  .image-dots {
    display: flex;
    flex-direction: column;
  }

  .dot {
    display: block;
    width: 10px;
    height: 10px;
    background-color: gray;
    border-radius: 50%;
    margin: 5px 0;
    cursor: pointer;
  }

  .dot.active {
    background-color: blue;
  }

  .product-slider .swiper-pagination {
    position: relative;
    top: 20px;
  }

  .product-slider .swiper-pagination .swiper-pagination-bullet.swiper-pagination-bullet-active {
    background: #000;
  }

  .image-with-dots {
    position: relative;
  }

  .image-dots .dot {
    position: absolute;
    position: absolute;
    display: block;
    width: 16px;
    height: 16px;
    margin: -8px 0 0 -8px;
    background: #ffffff;
    border-radius: 100%;
    box-shadow: 0 1px 10px #00000040;
    cursor: pointer;
    z-index: 1;
    transform: scale(1);
    transition: transform 0.25s ease-in-out;
  }

  .image-dots .dot:nth-child(1) {
    top: 40%;
    left: 18%;
  }

  .image-dots .dot:after {
    content: '';
    position: absolute;
    content: '';
    width: 40px;
    height: 40px;
    left: -12px;
    top: -12px;
    border-radius: 100%;
    background: rgba(255, 255, 255, 0.4);
  }

  .image-dots .dot.active {
    transform: scale(1.2);
  }

  .image-dots .dot:nth-child(2) {
    top: 15%;
    left: 40%;
  }

  .image-dots .dot:nth-child(3) {
    top: 30%;
    left: 80%;
  }

  .image-dots .dot:nth-child(4) {
    top: 70%;
    left: 70%;
  }

  .product-form button {
    width: 100%;
    border: none;
    display: block;
    background: #000;
    color: #fff;
    padding: 18px 0;
    text-align: center;
    font-size: 18px;
    cursor: pointer;
  }

  .image-with-dots img {
    width: 100%;
  }

  @media (min-width: 641px) {
    .image-with-dots {
      flex-basis: 50%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var productSwiper = new Swiper('.product-slider .swiper-container', {
      slidesPerView: 1,
      loop: false,
      spaceBetween: 0,
      grabCursor: true,
      pagination: {
        el: '.product-slider .swiper-pagination',
        clickable: true,
      },
      on: {
        slideChange: function () {
          var activeSlideIndex = this.realIndex;
          setActiveDot(activeSlideIndex);
        },
      },
    });

    var imageDots = document.querySelectorAll('.image-dots .dot');

    imageDots.forEach(function (dot, index) {
      dot.addEventListener('click', function () {
        productSwiper.slideTo(index);
      });
    });

    function setActiveDot(index) {
      imageDots.forEach(function (dot, dotIndex) {
        if (dotIndex === index) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Shop The Look",
  "settings": [
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image"
    }
  ],
  "blocks": [
    {
      "type": "product_slide",
      "name": "Product Slide",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop The Look"
    }
  ]
}
{% endschema %}
